{
  "name": "@brightspace-ui-labs/input-duration",
  "description": "An input component for tracking durations of time.",
  "type": "module",
  "repository": "https://github.com/BrightspaceUILabs/input-duration.git",
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:lit && npm run lint:style",
    "lint:eslint": "eslint . --ext .js,.html",
    "lint:lit": "lit-analyzer \"src/**/*.js\" --strict --rules.no-unknown-tag-name off",
